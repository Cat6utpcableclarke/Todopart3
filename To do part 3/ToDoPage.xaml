<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="To_do_part_3.ToDoPage"
             Title="To Do">
    <ContentPage.Content>
        <VerticalStackLayout Padding="10">
            <Label 
                Text="To Do"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
                FontSize="Large"
                FontAttributes="Bold"/>

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10,0,10"/>
            <ListView x:Name="ToDos" HorizontalOptions="Fill" VerticalOptions="Fill">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="Yellow" CornerRadius="5"  Padding="10" Margin="0,5" HasShadow="False" BorderColor="Transparent">
                                <Grid HorizontalOptions="Fill" VerticalOptions="Fill" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Task}" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="Start" TextColor="Black"/>
                                    <Button Grid.Row="0" Grid.Column="1" Text="âœï¸" Clicked="Edit_Clicked"  HorizontalOptions="End" BackgroundColor="Transparent"/>
                                    <Button Grid.Row="0" Grid.Column="2" Text="ðŸ—‘ï¸" Clicked="Delete_Clicked"  HorizontalOptions="End" BackgroundColor="Transparent"/>
                                    <Button Grid.Row="0" Grid.Column="3" Text="âœ”ï¸" Clicked="Done_Clicked"  CommandParameter="{Binding .}" HorizontalOptions="End" BackgroundColor="Transparent"/>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="+" Clicked="Add_Clicked" FontSize="Large" HorizontalOptions="Center" VerticalOptions="End" BackgroundColor="Transparent" TextColor="Black"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>