<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="To_do_part_3.SignUp"
             Title="SignUp">
    <VerticalStackLayout Margin="5" Padding="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Spacing="10">
        <Label 
            Text="Sign Up"
            FontAttributes="Bold"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="0,5,0,20"/>

        <Image
            Source="logo.svg"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="180"
            HeightRequest="180"
            Margin="0,0,0,5" />

        <Border Margin="0,20,0,5" Padding="3" StrokeShape="RoundRectangle 5" StrokeThickness="1" BackgroundColor="LightGray">
            <Entry Placeholder="Username" PlaceholderColor="Gray" />
        </Border>

        <Border Margin="0,0,0,5" Padding="3" StrokeShape="RoundRectangle 5" StrokeThickness="1" BackgroundColor="LightGray">
            <Entry Placeholder="Password" IsPassword="True" PlaceholderColor="Gray" />
        </Border>

        <Border Margin="0,0,0,5" Padding="3" StrokeShape="RoundRectangle 5" StrokeThickness="1" BackgroundColor="LightGray">
            <Entry Placeholder="Email Address" PlaceholderColor="Gray" />
        </Border>

        <Border Margin="0,0,0,10" Padding="3" StrokeShape="RoundRectangle 5" StrokeThickness="1" BackgroundColor="LightGray">
            <Entry Placeholder="Confirm Password" IsPassword="True" PlaceholderColor="Gray" />
        </Border>

        <Button 
            Text="SIGN UP"
            BackgroundColor="#8A2BE2"
            TextColor="White"
            HeightRequest="40"
            CornerRadius="20"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center"
            Margin="0,10,0,5"
            Clicked="SignUpButtonClicked"/>

        <Button 
            Text="SIGN IN"
            BackgroundColor="#9370DB"
            TextColor="Black"
            HeightRequest="40"
            CornerRadius="20"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center"
            Clicked="SignInButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>